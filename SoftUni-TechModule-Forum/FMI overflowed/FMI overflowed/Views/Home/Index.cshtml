<h1 style="font-family:'Lato';font-weight:900;color:#00af79;">FMI overflowed</h1>

<div class="uvc-heading-spacer line_only" style="topheight:1px;">

    <span class="uvc-headings-line" style="border-style: solid; border-bottom-width: 1px; border-color: rgb(86, 86, 86); width: 360px; float: left;"></span>
</div>
<div class="vc_empty_space" style="height: 32px"><span class="vc_empty_space_inner"></span></div>

<section class="row">
    <article class="col-md-4">
        <h1 class="title">Latest in Math</h1>

        <section class="row">
            @foreach (var post in Model)
            {

                if (post.Section == "Math" && post.Section != null)
                {   <article class="col-md-4">
                            <h3 class="title"><a href="/Posts/Details/@post.Id">@post.Title</a></h3>
                            <div class="about">
                                @if (post.Author != null)
                    {
                                    @:by <i>@post.Author.FullName (@post.Author.UserName)</i>
                        }

                            </div>
                            <div class="body">@Utils.CutText(post.Body) </div>
                            From <i>@post.Date</i>
                        </article>

                    break;
                }

            }
        </section>
    </article>
    <article class="col-md-4">
        <h1 class="title">Latest in Programming</h1>
        <section class="row">
            @foreach (var post in Model)
            {
                if (post.Section == "Programming")
                {   <article class="col-md-4">
                            <h3 class="title"><a href="/Posts/Details/@post.Id">@post.Title</a></h3>
                            <div class="about">
                                @if (post.Author != null)
                    {
                                    @:by <i>@post.Author.FullName (@post.Author.UserName)</i>
                }

                            </div>
                            <div class="body">@Utils.CutText(post.Body)</div>
                            From <i>@post.Date</i>
                        </article>
                    break;
                }
            }
        </section>
    </article>
    <article class="col-md-4">
        <h1 class="title">Latest in Fun</h1>
        <section class="row">
            @foreach (var post in Model)
            {
                if (post.Section == "Fun")
                {   <article class="col-md-4">
                            <h3 class="title"><a href="/Posts/Details/@post.Id">@post.Title</a></h3>
                            <div class="about">
                                @if (post.Author != null)
                    {
                                    @:by <i>@post.Author.FullName (@post.Author.UserName)</i>
                }

                            </div>
                            <div class="body">@Utils.CutText(post.Body) </div>
                            From <i>@post.Date</i>
                        </article>
                    break;
                }
            }
        </section>
    </article>

</section>











